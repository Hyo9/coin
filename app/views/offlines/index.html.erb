    background-image: url(<%= image_path 'offline_career.png' %>);
    background-size: 100%;
    background-repeat: no-repeat;
    width: 100%;
    height: 700px;
}

.coding_intro{
    background-image: url(<%= image_path 'offline_coding.png' %>);
    background-size: 100%;
    background-repeat: no-repeat;
    width: 100%;
    height: 700px;
}

</style>


<%= render 'nav'%>
<div class="container minheight">
  <div class="offline_page">
     <div class="row hidden-sm-down">
              <div class="col-md-3 col-5 ">
                 <div class="question_hk justify-content-center align-items-center mb-4">
                     <h2 class="title_review jua text_white_hk">오 프 라 인  특 강</h2>
                 </div>
               </div>
     </div>
    <div class="row justify-content-center no-gutters"><!--
            --><div class="col-6 "><%=image_tag("career_img.png", :class=>"off_top_hk img-fluid", :onclick=>"fnMove('1')") %></div><!--
           --><div class="col-6 for_b"><%=image_tag("coding_img.png",  :class=>"off_top_hk img-fluid", :onclick=>"fnMove('2')") %></div><!--
    --></div>
    
    <div class="row justify-content-center no-gutters">
        
       <% if current_user.nil? %>  
             <div class="col-6 px-0 mx-0">
                <%= link_to "/offlines/index" , :onclick => "myFunction3()" do %> <%= image_tag("apply_blue.png", :class=>"img-fluid") %><%end%>
             </div>
              <div class="col-6 px-0 for_b">
                <%= link_to "/offlines/index" , :onclick => "myFunction()" do %> <%= image_tag("apply_red.png",  :class=>"img-fluid")%> <%end%>
             </div>
        <%else %>
            <div class="col-6 px-0 mx-0">
                <%= link_to "/offlines/career_new" do %> <%= image_tag("apply_blue.png", :class=>"img-fluid") %><%end%>
             </div>

              <div class="col-6 px-0 for_b">
                  
                   <% flag=0 %>
                     <% @offline.each do |offline| %>
                        
                        <% if offline.user_id == current_user.id %>
                                <% flag=offline.id%>
                                <% break %>
                        <%else%> <% flag=0%>       
                        <%end%>     
                    <%end%>
                    
                    <% if flag!=0 %>
                              <%= link_to "/offlines/index", :onclick => "myFunction2()" do %> <%= image_tag("apply_red.png",  :class=>"img-fluid")%> <%end%>
                     <% else %>
                              <%= link_to "/offlines/coding_new" do %> <%= image_tag("apply_red.png",  :class=>"img-fluid")%> <%end%>
                    <%end %>
                    
               
             </div>
        <%end%>
        
        
     </div>
  </div>    
    


