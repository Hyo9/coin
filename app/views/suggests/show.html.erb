<%=render 'nav'%>

<div class="container">
    <div class="col-12">
         <h2 class="jua offline_apply_hs center_hs">신청 보기</h2>
    </div>
     <div class="row">
            <div class="col-md-11 hidden-sm-down qna_title_btn_hk"><p class="review_title_y">| "<%= @suggest.title %> "</p></div>
            <div class="col-md-1 hidden-sm-down text-uppercase qna_category_hk "><strong><%= @suggest.suggest_user %></strong></div>
            <div class="col-12 hidden-md-up qna_title_btn_hk"><p class="review_title_y_m">| "<%= @suggest.title %> "</p></div> 
     </div> 
     <hr>
     <div class="mt-10 mb-10"><p class="review_font"> <%=simple_format(@suggest.content, class: "review_font" )%></p></div>
     <% if @suggest.user==current_user%>
                 <div class="row hidden-sm-down">
                     <div class="col-1 pr-1"><%= link_to "/suggests", class: "index_hs" do %><%= image_tag('index_gray.png', class: "img-fluid button-img") %><%end%></div>
                     <div class="col-1 push-9 pr-1"> <%= link_to "/suggests/#{@suggest.id}/edit" do %> <%= image_tag("edit.png", :class=>"button_y") %> <%end%> </div>
                     <div class="col-1 push-9 pr-1"> <%= link_to "/suggests/#{@suggest.id}", method: :delete, data: { confirm: "삭제합니까?" } do %> <%= image_tag("delete.png", :class=>"button_y") %><%end%></div>
                 </div>
                 <div class="row hidden-md-up no-gutters">
                     <div class="col-2"><%= link_to "/suggests", class: "index_hs" do %><%= image_tag('index_gray.png', class: "img-fluid button-img") %><%end%></div>
                     <div class="col-2 push-6 mx-1"> <%= link_to "/suggests/#{@suggest.id}/edit" do %> <%= image_tag("edit.png", :class=>"button_y") %> <%end%> </div>
                     <div class="col-2 push-6"> <%= link_to "/suggests/#{@suggest.id}", method: :delete, data: { confirm: "삭제합니까?" } do %> <%= image_tag("delete.png", :class=>"button_y") %><%end%></div>
                 </div>

     <%else %>
            <div class="row hidden-sm-down">
               <div class="col-1 pr-1"><%= link_to "/suggests", class: "index_hs" do %><%= image_tag('index_gray.png', class: "img-fluid button-img") %><%end%></div>
            </div>
            <div class="row hidden-md-up no-gutters">
                <div class="col-2"><%= link_to "/suggests", class: "index_hs" do %><%= image_tag('index_gray.png', class: "img-fluid button-img") %><%end%></div>
           </div>
     <%end%>
     
    
</div>
