<%=render 'nav'%>
<p id="notice"><%= notice %></p>

<h1>Listing Suggests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggests.each do |suggest| %>
      <tr>
        <td><%= suggest.title %></td>
        <td><%= suggest.content %></td>
        <td><%= suggest.user_id %></td>
        <td><%= suggest.suggest_user %></td>
        <td><%= link_to 'Show', suggest %></td>
        <td><%= link_to 'Edit', edit_suggest_path(suggest) %></td>
        <td><%= link_to 'Destroy', suggest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggest', new_suggest_path %>
