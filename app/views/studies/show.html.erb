                    <% end %>
                </div>
                <div class="col-9 for_font for_b pr-0">
                   <%= simple_format(@study.teacher_intro) %>
                </div>
            
            </div> 
        </div>
        
        <div class="col-12"><div class="intro_box_m  jua">강 의 내 용</div></div>
