         <div class="row mx-1">
           
                 <div class="col-5 px-0 mt-3 mr-4">
                 <% if current_user.nil? %>     
                    <%= link_to "/studies/#{@study.id}" , :onclick => "myFunction()" do %><%= image_tag("study_apply.png", :class=>"review_write") %> <% end %>
                 
                <%else%>     
                         <% if flag!=0 %>
