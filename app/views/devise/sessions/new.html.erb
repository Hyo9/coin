
      <div class="container minheight">
          
          
          
          <div class="row justify-content-center align-items-center">
              
            <div class="col-10 col-md-5 bg-info sign_y">
                  <div class="row justify-content-center align-items-center mt-5">
                      <div class="col-md-4 col-6"><%= image_tag("coin_d.png", :class=>"review_write") %> </div>
                  </div>
    
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
                  <div class="form-inputs align-items-center">
                    <div class="row justify-content-center align-items-center">
                      <div class="col-12"><p class="sign_title">WAKE UP COIN</p></div>
                      <div class="col-12"><p><%= f.input :email, required: false, autofocus: true, :label=>"EMAIL", :placeholder => "이메일을 입력해주세요." %></p></div>
                    </div>
                  
              
                  <div class="form-inputs">
                    <div class="row justify-content-center align-items-center ">
                      <div class="col-12"><p><%= f.input :password, required: false ,:placeholder => "비밀번호를 입력해주세요."%></p></div>
                    </div>
                 </div>
                  
                  <!--<div class="form-inputs">-->
                  <!--  <div class="row justify-content-center align-items-center ">-->
                  <!--    <div class="col-12"><f.input :remember_me, as: :boolean, :label=>"계정 저장하기" if devise_mapping.rememberable? %></div>-->
                  <!--  </div>-->
                  <!--</div>-->
                
                  <div class="form-actions">
                
                  <div class="row justify-content-center align-items-center">
                    <div class="col-12"><div><%= f.button :submit, "로그인" %></div></div>
                  </div>
                </div> 
                
                  <p class="notice"><%= notice %></p>
                <p class="alert boxshadow"><%= alert %></p>


                  
                <% end %>
                
                <%= render "devise/shared/links" %>
                
                
            </div>
            
          </div>
          
          
      </div> <!--컨테이너 닫기 -->

